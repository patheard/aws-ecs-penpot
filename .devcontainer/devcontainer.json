{
	"name": "aws-ecs-penpot",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "1.10.1",
			"tflint": "latest",
			"terragrunt": "0.69.10"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"hashicorp.terraform",
				"github.copilot",
				"github.vscode-github-actions",
				"hashicorp.hcl",
				"redhat.vscode-yaml"
			]
		}
	},
	"remoteUser": "vscode"
}
